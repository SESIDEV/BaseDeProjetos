@model IEnumerable<BaseDeProjetos.Models.Empresa>
@using System.Collections
<style>
    th {
  margin-right: 10px;
    }
    .empresa {
        border-radius: 10px;
        box-shadow: 0 10px 10px rgba(0, 0, 0, 0.2);
        display: flex;
        max-width: 100%;
        margin: 0 20px 20px 0;
        overflow: hidden;
        width: 100%;
        border: 0.5px solid black;
    }

        .empresa h6 {
            opacity: 0.6;
            margin: 0;
            letter-spacing: 1px;
            text-transform: uppercase;
        }

        .empresa h2 {
            letter-spacing: 1px;
            margin: 10px 0
        }

    .empresa-preview {
        background-color: #fff;
        color: #2A265F;
        min-width: 200px;
        max-width: 200px;
        max-height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    #logoEmpresa {
        width: 100%;
        height: 100%;
        max-width: 180px;
        object-fit: contain;
        padding: 20px;
    }

    .empresa-preview a {
        color: #fff;
        display: inline-block;
        font-size: 12px;
        opacity: 0.6;
        margin-top: 30px;
        text-decoration: none;
    }

    .empresa-info {
        padding: 30px;
        position: relative;
        width: 100%;
    }

    .dados-container {
        position: absolute;
        top: 30px;
        right: 30px;
        text-align: right;
        width: 150px;
    }

    .dados {
        background-color: #ddd;
        border-radius: 3px;
        height: 5px;
        width: 100%;
    }

        .dados::after {
            border-radius: 3px;
            background-color: #2A265F;
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            height: 5px;
            width: 66%;
        }

    .dados-text {
        font-size: 10px;
        opacity: 0.6;
        letter-spacing: 1px;
    }

    .btn-empresa {
        background-color: #2A265F;
        border: none;
        border-radius: 5px;
        color: white;
        text-decoration: none;
        font-size: 14px;
        padding: 5px;
    }
</style>
@{
    ViewData["Title"] = "Empresas";
    List<Pessoa> contatos = ViewBag.Contatos as List<Pessoa>;
}

<div class="container">
    <div class="row align-items-start">
        <div class="col-12">
            <h1>Lista de Empresas</h1>
            <form asp-action="Index" method="get">
                <div class="input-group">
                    <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" class="form-control" aria-label="Text input with segmented dropdown button" placeholder="Digíte o nome da Empresa">
                    <button type="submit" value="Procurar" class="btn btn-outline-secondary">Pesquisar</button>
                    <button type="button" class="btn btn-outline-secondary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                        <span class="visually-hidden">Mais Opções</span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a asp-action="Index" class="dropdown-item">Exibir Lista Completa</a></li>
                        <li><a asp-action="Create" class="dropdown-item">Adicionar Empresa</a></li>
                    </ul>
                </div>
            </form>
        </div>
    </div>
    <hr />


    <div class="row">

        @foreach (var item in Model)
        {
            <div class="empresa-container col-6">
                <div class="empresa">
                    <div class="empresa-preview">
                        @if (item.Logo != null)
                        {
                            <img style="background-color:white" id="logoEmpresa" src="@item.Logo" alt="Logo da Empresa" />
                        }
                        else
                        {
                            <h2 id="logo_alt">Sem Logo</h2>
                        }
                    </div>
                    <div class="empresa-info">

                        <div class="dados-container">
                        </div>

                        <p><strong>Nome Empresa:</strong> @item.Nome</p>
                        <p><strong>CNPJ:</strong> @item.CNPJ</p>
                        <p><strong>Setor:</strong> @item.Segmento</p>
                        <button type="button" class="btn-empresa" data-toggle="collapse" data-target="#e_@item.Id">Ver ações</button>
                        <button type="button" class="btn-empresa" data-toggle="collapse" data-target="#ce_@item.Id">Ver contatos</button>

                        <div id="e_@item.Id" class="collapse">
                            <hr />
                            <h6>Ações</h6>
                            <small>
                                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Ver Detalhes</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                            </small>
                            <br />
                        </div>

                        <div id="ce_@item.Id" class="collapse">
                            <hr />
                            <h6>Contatos Registrados</h6>
                            @if (contatos != null)
                            {
                                <small>
                                    <table>
                                        <tr>
                                            <th> Nome</th>
                                            <th> E-mail</th>
                                            <th> Telefone</th>
                                        </tr>

                                        @foreach (Pessoa contato in contatos.Where(c => c.empresa != null).Where(c2 => c2.empresa.Id == item.Id))
                                        {
                                            <tr>
                                                <td>@contato.Nome</td>
                                                <td>@contato.Cargo</td>
                                                <td>@contato.Email</td>
                                                <td>@contato.Telefone</td>
                                            </tr>
                                        }
                                    </table>
                                </small>
                            }
                            else
                            {
                                <p>Sem contatos registrados</p>
                            }
                            <br />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@model BaseDeProjetos.Models.Empresa

@{
    ViewData["Title"] = "Detalhes";
}

<partial name="Header" view-data="@ViewData" />
<div id="temp-container" style="padding-left: 20em; padding-top:2em">
    <h1>Detalhes</h1>

    <div>
        <h4>Empresa</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RazaoSocial)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RazaoSocial)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CNPJ)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CNPJ)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Porte)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Porte)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Segmento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Segmento)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Estado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Estado)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Logo)
            </dt>
            <dd class="col-sm-10">
                <img class="logoEmpresa" src="@Html.DisplayFor(model => model.Logo)" alt="Logo da Empresa"
                    width="300" />
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
        <a asp-action="Index">Voltar para Lista</a>
    </div>
</div>
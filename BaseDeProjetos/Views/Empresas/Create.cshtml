@model BaseDeProjetos.Models.Empresa
@{
    ViewData["Title"] = "Criar";
 }
<partial name="Header" view-data="@ViewData" />
<div id="temp-container" style="padding-left:20em;padding-top: 2em">
<h1>Criar</h1>
<h4>Empresa</h4>
<div class="form-check">
  <input class="form-check-input" type="checkbox" value="" id="empresa_estrangeira_check" onclick="FiltroEmpresaEstrangeira()">
  <label class="form-check-label" for="empresa_estrangeira_check">Empresa Estrangeira</label>
</div>
<hr />
</div>
<script>
    
</script>

<div class="row" style="padding-left: 20em;">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" id="cadastro_campo1">
                <label asp-for="CNPJ" class="control-label"></label><span>   (Apenas números)</span>
                <input asp-for="CNPJ" id="valor_cnpj" class="form-control" maxlength="18"/>
                <button onclick="" type="button">Buscar</button>
                <p id="StatusCNPJ"></p>
                <hr/>
                <h6 id="TipoEmpresaStatus">Tipo: </h6>
                <h6 id="SituacaoEmpresaStatus">Situação: </h6>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" id="NomeEmpresaCadastro" class="form-control" value="" readonly/>
            </div>
            <div class="form-group">
                <label class="control-label">Nome Fantasia</label>
                <input id="NomeFantasiaEmpresa" class="form-control" value="" readonly/>
            </div>
            <div id="cadastro_campo2">
                <label asp-for="Estado" class="control-label"></label>
                <input id="EstadoEmpresaCadastro" class="form-control" value="" readonly/> <!--VISUAL APENAS-->
                <input asp-for="Estado" id="EstadoEmpresaCadastroINT" value="" style="display: none;" readonly/>
            </div>
            <hr/>
            <div class="form-group">
                <label asp-for="Segmento" class="control-label"></label>
                <select asp-for="Segmento" class="form-control" asp-items="Html.GetEnumSelectList<SegmentoEmpresa>().OrderBy(p=>p.Text)"></select>
            </div>
            <div class="form-group">
                <label asp-for="Logo" class="control-label"></label>
                <input type="file" class="form-control" id="logo_imagem" onchange="Base64()"/>
                <input asp-for="Logo" id="img_b64" class="control-label" style="display: none;" value="" readonly>
            </div>
            <img id="img_preview" src="" width="300" style="margin-top:5px;">
            <hr />
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Voltar para Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@model BaseDeProjetos.Models.Empresa
@{
    ViewData["Title"] = "Criar";
 }
<h1>Criar</h1>
<h4>Empresa</h4>
<div class="form-check">
  <input class="form-check-input" type="checkbox" value="" id="empresa_estrangeira_check" onclick="TesteJS()">
  <label class="form-check-label" for="empresa_estrangeira_check">Empresa Estrangeira</label>
</div>
<hr />
<script>
    function ChecarUsuario() {
        $("#StatusCNPJ").html("Checando...");
        $.post("@Url.Action("SeExisteCnpj", "Empresas")",
            {
                cnpj: $("#valor_cnpj").val()
            },
        function (data) {
            if (data == 0) {
                $("#StatusCNPJ").html('');
                $("#valor_cnpj").css("border-color", "");
                validarCNPJ();
            } else {
                $("#StatusCNPJ").html('<font color="Red">CNPJ já cadastrado.</font>');
                $("#valor_cnpj").css("border-color", "Red");
            }
        });
    }
</script>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" id="cadastro_campo1">
                <label asp-for="CNPJ" class="control-label"></label><span>   (Apenas números)</span>
                <input asp-for="CNPJ" id="valor_cnpj" class="form-control" maxlength="14"/>
                <button onclick="ChecarUsuario()" type="button">Buscar</button>
                <p id="StatusCNPJ"></p>
                <hr/>
                <h6 id="TipoEmpresaStatus">Tipo: </h6>
                <h6 id="SituacaoEmpresaStatus">Situação: </h6>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" id="NomeEmpresaCadastro" class="form-control" value="" readonly/>
            </div>
            <div id="cadastro_campo2">
                <label asp-for="Estado" class="control-label"></label>
                <input id="EstadoEmpresaCadastro" class="form-control" value="" readonly/> <!--VISUAL APENAS-->
                <input asp-for="Estado" id="EstadoEmpresaCadastroINT" value="" style="display: none;" readonly/>
            </div>
            <hr/>
            <div class="form-group">
                <label asp-for="Segmento" class="control-label"></label>
                <select asp-for="Segmento" class="form-control" asp-items="Html.GetEnumSelectList<SegmentoEmpresa>().OrderBy(p=>p.Text)"></select>
            </div>
            <div class="form-group">
                <label asp-for="Logo" class="control-label"></label>
                <input type="file" class="form-control" id="logo_imagem" onchange="Base64()"/>
                <input asp-for="Logo" id="logo_b64" class="control-label" style="display: none;" value="" readonly>
            </div>
            <img id="logo_img_preview" src="" width="300">
            <hr />
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Voltar para Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
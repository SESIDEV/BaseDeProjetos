@model BaseDeProjetos.Models.FollowUp
@using Microsoft.AspNetCore.Http
@using System
@{
  ViewData["Title"] = "Atualizar Prospecção";
  if (!(Context.Session.GetString("_Casa") is null))
  {
    ViewData["Area"] = Context.Session.GetString("_Casa");
  }
  string valor_contato;
}

@{
  var prosp = ViewData["prospeccao"] as Prospeccao;
}

<!-- Modal -->
<div class="modal fade" id="CreateFollowupProspModal-@prosp.Id-Toggle" tabindex="-1"
  aria-labelledby="CreateFollowupProspModal-@prosp.Id-ToggleLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="CreateFollowupProspModal-@prosp.Id-Toggle">
          Adicionar Novo Status a Prospecção
        </h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div style="font-size: 1.25rem; color:black;">Dados da Prospecção:</div>
        <div class="form-group">
          <label asp-for="Id" class="control-label"></label>
          <input type="text" class="form-control" value="@prosp.Id" readonly />
          <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label> Empresa </label>
          <input type="text" class="form-control" value="@prosp.Empresa.Nome" readonly />
        </div>
        <div class="form-group">
          <label> Casa </label>
          <input type="text" class="form-control" value="@prosp.Casa" readonly />
        </div>
        <div class="form-group">
          <label> Tipo de Contratação </label>
          <input type="text" class="form-control" value="@prosp.TipoContratacao" readonly />
        </div>
        <div class="form-group">
          <label> Status </label>
          <input type="text" class="form-control" value="@prosp.Status.OrderBy(p=> p.Data).Last().Status.ToString()"
            readonly />
        </div>

        <div class="form-group">
          <label> Contato da prospecção</label>
          @if (prosp.Contato == null)
          {
            valor_contato = "SemNome";
          }
          else
          {
            valor_contato = prosp.Contato.Nome;
          }
          <input type="text" class="form-control" value="@valor_contato" readonly />
        </div>

        <div class="form-group">
          <label>Informações da prospecção (primeiro contato)</label>
          <input type="text" class="form-control" value="@prosp.Status.OrderBy(p=>p.Data).First().Anotacoes" readonly />
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn app-btn-secondary" data-bs-target="#modalDetalhes-@prosp.Id-Toggle"
          data-bs-toggle="modal">
          Sair
        </button>
        <button type="button" class="btn app-btn-primary" data-bs-target="#CreateFollowupProspModal-@prosp.Id-Toggle2"
          data-bs-toggle="modal">
          Próximo
        </button>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="CreateFollowupProspModal-@prosp.Id-Toggle2" aria-hidden="true"
  aria-labelledby="#CreateFollowupProspModal-@prosp.Id-ToggleLabel2" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="CreateFollowupProspModal-@prosp.Id-ToggleLabel2">
          Adicionar Novo Status
        </h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form asp-controller="FunilDeVendas" asp-action="Atualizar" method="POST">
        <div class="modal-body">
          <input asp-for="OrigemID" type="hidden" value='@prosp.Id' />

          <div class="form-group">
            <label asp-for="Data" class="control-label"></label>
            <input asp-for="Data" type="date" class="form-control" />
            <span asp-validation-for="Data" class="text-danger"></span>
          </div>
          <div class="form-group">
            <label asp-for="@Model.Status" class="control-label"></label>
            <select asp-for="@Model.Status" class="form-control"
              asp-items="Html.GetEnumSelectList<StatusProspeccao>().Where(p => Int32.Parse(p.Value) >= (int)prosp.Status.OrderBy(p => p.Data).Last().Status)"></select>
            <span asp-validation-for="Status" class="text-danger"></span>
          </div>
          <div class="form-group">
            <label asp-for="Anotacoes" class="control-label"></label>
            <textarea class="form-control" asp-for=" Anotacoes" rows="3"></textarea>
            <span asp-validation-for="Anotacoes" class="text-danger"></span>
          </div>
          <div id="naoconversao" style="display:none">
            <hr />
            <div class="form-group">
              <label class="control-label"> Motivo de não conversão:</label>
              <select asp-for="Status" class="form-control"
                asp-items="Html.GetEnumSelectList<MotivosNaoConversao>()"></select>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn app-btn-primary" data-bs-target="#CreateFollowupProspModal-@prosp.Id-Toggle"
            data-bs-toggle="modal">
            Anterior
          </button>
          <input type="submit" value="Incluir" class="btn app-btn-primary">
        </div>
      </form>
    </div>
  </div>
</div>
<script>
  var dateControl = document.querySelector('input[type="date"]');
  dateControl.max = new Date(new Date().getTime() - new Date().getTimezoneOffset() * 60000).toISOString().split("T")[0];
</script>
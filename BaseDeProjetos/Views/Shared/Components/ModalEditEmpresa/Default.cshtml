@model BaseDeProjetos.Models.Empresa

@{
    ViewData["Title"] = "Editar";
}


<script>
    function Base64(id) {
        imagem = document.getElementById(`logo_imagem-${id}`).files[0];
        r = new FileReader();
        r.readAsDataURL(imagem);
        r.onload = function () {
            document.getElementById(`img_preview-${id}`).src = r.result
            document.getElementById(`img_b64-${id}`).value = r.result
        }
    }

    function MostrarImagem(id) {
        document.getElementById(`img_preview-${id}`).src = document.getElementById(`img_b64-${id}`).value
    }

    
</script>

<form asp-action="Edit" asp-route-id="@Model.Id">
    
    <input type="hidden" asp-for="Id" />
    <div class="modal fade" id="EditEmpresaModal-@Model.Id-Toggle" aria-hidden="true"
         aria-labelledby="EditEmpresaModal-@Model.Id-ToggleLabel" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="EditEmpresaModal-@Model.Id-ToggleLabel">
                        Editar Empresa
                    </h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CNPJ" class="control-label"></label><span>   (Apenas números)</span>
                        <input onload="validarCNPJ('@Model.Id')" asp-for="CNPJ" id="valor_cnpj-@Model.Id" class="form-control" maxlength="14" required />
                        <button class="btn app-btn-primary" onclick="validarCNPJ('@Model.Id')" type="button">Buscar</button>
                    </div>
                    <hr />
                    <h6 id="TipoEmpresaStatus">Tipo: </h6>
                    <h6 id="SituacaoEmpresaStatus">Situação: </h6>
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" id="NomeEmpresaCadastro-@Model.Id" class="form-control" value="@Model.Nome" readonly />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Nome Fantasia</label>
                        <input id="NomeFantasiaEmpresa-@Model.Id" class="form-control" value="" readonly />
                    </div>
                    <div>
                        <label asp-for="Estado" class="control-label"></label>
                        <input id="EstadoEmpresaCadastro-@Model.Id" class="form-control" value="@Model.Estado.GetDisplayName()" readonly /> <!--VISUAL APENAS-->
                        <input asp-for="Estado" id="EstadoEmpresaCadastroINT" value="@Model.Estado" style="display: none;" readonly />
                    </div>
                    <hr />
                    <div class="form-group">
                        <label asp-for="Segmento" class="control-label"></label>
                        <select asp-for="Segmento" class="form-control" asp-items="Html.GetEnumSelectList<SegmentoEmpresa>().OrderBy(p=>p.Text)" value="@Model.Segmento"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Logo" class="control-label"></label>
                        <input type="file" class="form-control" id="logo_imagem-@Model.Id" onchange="Base64('@Model.Id')" />
                        <input asp-for="Logo" id="img_b64-@Model.Id" class="control-label" style="display: none;" value="@Model.Logo" onchange="MostrarImagem('@Model.Id')" readonly>
                    </div>
                    <img id="img_preview-@Model.Id" src="" width="300" style="margin-top:5px;">          
                </div>
                <div class="modal-footer">
                    <a asp-action="Index" class="btn app-btn-secondary">Voltar para Lista</a>
                    <input type="submit" value="Salvar" class="btn app-btn-primary"
                           data-bs-target="#EditEmpresaModal-@Model.Id-Toggle" data-bs-toggle="modal">
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

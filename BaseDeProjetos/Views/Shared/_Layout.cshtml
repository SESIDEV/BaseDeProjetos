<body class="app">
    @{
        var routeData = ViewContext.RouteData;
        var requestUrl = Context.Request.Path;
    }

    @* Não remover, impede que rotas que não definam um controller ou um action como o Logout, etc exibam o
        Sidebar/Header, etc que vivem exigindo dados do usuário Logado.
        @if ((routeData.Values["controller"] != null || routeData.Values["action"] != null) &&
        (routeData.Values["action"].ToString() != "Index" && routeData.Values["controller"].ToString() != "Home"))

        {
        <partial name="Header" />
        }*@

    @RenderBody()

    @RenderSection("Scripts", required: false)
    
    <!-- Initialize tooltips -->
    <script>
        tippy('#tip_ind', {allowHTML: true, placement: 'left'});
        tippy('#tip_agg', {allowHTML: true, placement: 'right'});
    </script>

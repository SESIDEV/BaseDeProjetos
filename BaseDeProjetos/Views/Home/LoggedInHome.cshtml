@page
@using System.Globalization
@model BaseDeProjetos.Views.Home.LoggedInHomeModel
@{
    decimal receita = 1;
    decimal despesas = 1;
    decimal investimento = 1;
    decimal sustentabilidade = 1;
    float quali = 1;

    try
    {
        //decimal receita = (decimal)ViewBag.receita_isiqv + (decimal)ViewBag.receita_isiii + (decimal)ViewBag.receita_cisho;
        receita = (decimal)ViewBag.receita_total;
        investimento = (decimal)ViewBag.invest_total;
        despesas = (decimal)ViewBag.despesa_total;
        quali = (float)ViewBag.quali;

        if (despesas > 0)
        {

            sustentabilidade = receita / despesas;
        }
        else
        {
            sustentabilidade = 1;
        }
    }

    catch (Exception e)
    {

    }
}
<style>
    #sustentabilidade {
        background-image: url("https://ogimg.infoglobo.com.br/sociedade/24483206-8b9-2d9/FT1086A/652/IC_Multiplex-Covid-19.jpg");
        background-image: linear-gradient(to bottom, rgba(255, 255, 255, 0.5) 0%, rgba(255, 255, 255, 0.4) 100%), url("https://ogimg.infoglobo.com.br/sociedade/24483206-8b9-2d9/FT1086A/652/IC_Multiplex-Covid-19.jpg");
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }

    a {
        text-decoration: none;
        font-size: 20px;
        padding: 10px;
    }
</style>
<div class="row">

    <partial name="Menu" view-data="@ViewData" />
    <div class="col-md-12">
        <div class="card">
            <div class="card-header text-center">
                <h5>Bem vindo ao sistema de Gestão de Inovação - SGI</h5>
            </div>
            <div class="card-body row">

                <div class="col-8">
                    <ul class="col-12 list-group-flush">
                        <li class="list-group-item">
                            <h5> Status Financeiro </h5>
                            <small>@ViewBag.Data.ToString("dd/MM/yyyy")</small>
                        </li>
                        <li class="list-group-item mt-3">
                            <span class="font-weight-bold">Receita Competência:</span>
                            <span style="font-size: 1.2rem; color: blue;">@receita.ToString("C2",
                                CultureInfo.CreateSpecificCulture("pt-BR"))</span>
                        </li>
                        <li class="list-group-item mt-3">
                            <span class="font-weight-bold">Caixa: </span>
                            <span style="font-size: 1.2rem; color: blue;">@investimento.ToString("C2",
                                CultureInfo.CreateSpecificCulture("pt-BR"))</span>
                        </li>
                        <li class="list-group-item mt-3">
                            <span class="font-weight-bold">Despesa: </span>
                            <span style="font-size: 1.2rem; color: red;">@despesas.ToString("C2",
                                CultureInfo.CreateSpecificCulture("pt-BR"))</span>
                        </li>
                    </ul>

                    <div class="col row">
                        <div class="col-md-4 card">
                            <div class="card-body">
                                <center>
                                    <span class="text-uppercase">PROJETOS</span>
                                    <hr />
                                    <div class="card-text">
                                        <h2>
                                            @ViewBag.n_proj
                                        </h2>
                                        projetos ativos
                                    </div>
                                </center>
                            </div>
                        </div>
                        <div class="col-md-4 card">
                            <div class="card-body">
                                <center>
                                    <span class="text-uppercase">Empresas</span>
                                    <hr />
                                    <div class="card-text">
                                        <h2>@ViewBag.n_empresas </h2>
                                        empresas com relacionamento conosco
                                    </div>
                                </center>
                            </div>
                        </div>

                        <div class="col-md-4 card">
                            <div class="card-body">
                                <center>
                                    <span class="text-uppercase">funil de vendas</span>
                                    <hr />
                                    <div class="card-text">
                                        <h2>@ViewBag.n_prosp </h2>
                                        prospecções ativas
                                    </div>
                                </center>
                            </div>
                        </div>
                        <div class="col-md-4 card">
                            <div class="card-body">
                                <center>
                                    <span class="text-uppercase">Equipe</span>
                                    <hr />
                                    <div class="card-text">
                                        <h2> @ViewBag.Usuarios </h2>
                                        colaboradores
                                    </div>
                                </center>
                            </div>
                        </div>
                        <div class="col-md-4 card">
                            <div class="card-body">
                                <center>
                                    <span class="text-uppercase">Satisfação do cliente</span>
                                    <hr />
                                    <div class="card-text">
                                        <h2>@ViewBag.satisfacao.ToString("P1") </h2>
                                    </div>
                                </center>
                            </div>
                        </div>
                        <div class="col-md-4 card">
                            <div class="card-body">
                                <center>
                                    <span class="text-uppercase">Volume de Negócios</span>
                                    <hr />
                                    <div class="card-text">
                                        <h2>@ViewBag.Volume_Negocios.ToString("C2",
                                            CultureInfo.CreateSpecificCulture("pt-BR"))</h2>
                                    </div>
                                    Nas prospecções ativas no momento
                                </center>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-4 row">
                    <div id="sustentabilidade" class="jumbotron col-12">
                        <center>
                            <span class="text-uppercase">Sustentabilidade</span>
                            <hr />
                            <h1 class="font-weight-bolder">
                                @sustentabilidade.ToString("P2")
                            </h1>

                            <span class="font-weight-lighter">das despesas são cobertas por receita</span>
                        </center>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
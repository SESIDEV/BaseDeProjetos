@model BaseDeProjetos.Models.CodigoAmostraProjeto

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CodigoAmostraProjeto</h4>

<partial name="Header" view-data="@ViewData" />
<div class="app-wrapper">
	<div class="app-content pt-3 p-md-3 p-lg-4">
		<div class="container-xl">

            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Projeto" class="col-form-label" style="font-weight: 600"></label>
                            <select asp-for="Projeto.Id" class="form-control"
                                asp-items='@(ViewData["Projetos"] as SelectList).OrderBy(p=>p.Text)'>
                                <option value="-1">Selecione o projeto</option>
                            </select>
                            <span asp-validation-for="Projeto.Id" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Codigo" class="control-label"></label>
                            <input asp-for="Codigo" class="form-control" />
                            <span asp-validation-for="Codigo" class="text-danger"></span>
                        </div>
                        <br/>
                        <div class="form-group">
                            <input type="submit" value="Criar" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-danger">Voltar</a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
<partial name="Footer" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model IEnumerable<BaseDeProjetos.Models.CodigoAmostraProjeto>

@{
    ViewData["Title"] = "Index";
}
<partial name="Header" view-data="@ViewData" />
<div class="app-wrapper">
	<div class="app-content pt-3 p-md-3 p-lg-4">
		<div class="container-xl">

            <div class="row g-3 mb-4 align-items-center justify-content-between">
				<div class="col-auto">
					<h1 class="app-page-title mb-0">Códigos de Projeto</h1>
				</div>
				<div class="col-auto">
					<div class="page-utilities">
						<div class="row g-2 justify-content-start justify-content-md-end align-items-center">
							<div class="col-auto">
								<form class="table-search-form row gx-1 align-items-center">
									<div class="col-auto">
										<input type="text" id="search-orders" name="SearchString" value='@ViewData["CurrentFilter"]' class="form-control search-orders" placeholder="Buscar..." autocomplete="off">
									</div>
								</form>
							</div>
							<div class="col-auto">
                                <a style="margin-left:90%" class="btn app-btn-primary" asp-action="Create">Adicionar</a>
							</div>
						</div>
					</div>
				</div>
            </div>

            <table class="table">
                <thead>
                    <tr>
                        <th>Projeto</th>
                        <th>Código</th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Projeto.NomeProjeto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Codigo)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                        </td>
                    </tr>
            }
                </tbody>
            </table>
        </div>
    </div>
    <partial name="Footer" />
</div>

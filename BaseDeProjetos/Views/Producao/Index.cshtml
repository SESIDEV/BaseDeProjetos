@model IEnumerable<BaseDeProjetos.Models.Producao>

@{ViewData["Title"] = "Gestão do Conhecimento";}
<style>
    .status-do-card{
        margin-top:4px; height:20px; border-radius:40px; padding: 0px 10px 0px 10px; font-size:12px; pointer-events:none;
    }

    .titulo-do-card{
        overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;
    }
    .descricao-do-card{
        overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 4; -webkit-box-orient: vertical;
    }
</style>

<div class="d-flex" style="justify-content:space-between">
<h1>Gestão do Conhecimento</h1>
<p><a asp-action="Create" style="margin-top:10px">Adicionar Produção</a></p>
</div>

<div class="container">
    <div class="row">
        @foreach (var item in Model) {
            <div class="col-md-3">
                <div class="card mt-3" style="width: 18rem;">
                    <h5 class="text-center card-header">@Html.DisplayFor(modelItem => item.Grupo)</h5>
                    <div style="height:200px; overflow:hidden;">
                        <img class="card-img-top" src="@Html.DisplayFor(modelItem => item.Imagem)" alt="imagem">
                    </div>
                    <div class="card-body">
                        <div class="d-flex" style="justify-content:space-between">
                            <h5 class="card-title titulo-do-card">@Html.DisplayFor(modelItem => item.Titulo)</h5>
                            
                            @if(item.StatusPub == StatusPub.Aceito)
                                {<p class="btn btn-info status-do-card">@Html.DisplayFor(modelItem => item.StatusPub)</p>}
                            else if(item.StatusPub == StatusPub.Publicado)
                                {<p class="btn btn-success status-do-card">@Html.DisplayFor(modelItem => item.StatusPub)</p>}
                            else
                                {<p class="btn btn-secondary status-do-card">@Html.DisplayFor(modelItem => item.StatusPub)</p>}

                        </div>
                        <p class="card-text descricao-do-card">@Html.DisplayFor(modelItem => item.Descricao)</p>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Detalhes</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Deletar</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
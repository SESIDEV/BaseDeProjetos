@model BaseDeProjetos.Models.Prospeccao

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes da prospecção</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Usuario.UserName)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Casa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Casa)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoContratacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoContratacao)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LinhaPequisa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LinhaPequisa)
        </dd>
    </dl>

    <hr />
    <h5> Histórico de Atualizações </h5>
    <hr />
    @foreach(var followup in Model.Status)
    {
        <div class="card m-1">
            <div class="card-body">
           <h6 class="card-title">@followup.Data - @followup.Status</h6> 
                <div class="card-text">
                    @followup.Anotacoes
                </div>
            </div>
            <div class="card-footer">
                Vence em: @followup.Vencimento
                <hr />
                <a href="../RemoverFollowUp/@followup.Id">Remover</a> | 
                <a href="../EditarFollowUp/@followup.Id">Editar</a>
            </div>
        </div>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar Prospecção</a> |
    <a asp-action="Index">Voltar para o Início</a>
</div>

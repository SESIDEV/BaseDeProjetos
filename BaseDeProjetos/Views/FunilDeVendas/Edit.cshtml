@model BaseDeProjetos.Models.Prospeccao

@{
    ViewData["Title"] = "Edit";
}
<h1>Editar</h1>

<h4>Prospecção</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <button class="col-12 btn btn-primary" data-toggle="collapse" data-target="#existente" aria-expanded="true" aria-controls="existente">
                A empresa já foi cadastrada
            </button>
            <button class="col-12 btn btn-primary" data-toggle="collapse" data-target="#inexistente" aria-expanded="true" aria-controls="inexistente">
                É o primeiro registro da empresa
            </button>
        </div>
    </div>
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <fieldset>
                <legend> Dados da prospecção </legend>
                <div class="form-group">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control"  readonly />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Casa" class="control-label"></label>
                    <select asp-for="Casa" class="form-control" asp-items="Html.GetEnumSelectList<Casa>()"></select>
                    <span asp-validation-for="Casa" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TipoContratacao" class="control-label"></label>
                    <select asp-for="TipoContratacao" class="form-control" asp-items="Html.GetEnumSelectList<TipoContratacao>()"></select>
                    <span asp-validation-for="TipoContratacao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LinhaPequisa" class="control-label"></label>
                    <select asp-for="LinhaPequisa" class="form-control" asp-items="Html.GetEnumSelectList<LinhaPesquisa>()"></select>
                    <span asp-validation-for="LinhaPequisa" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Contato.Nome" class="control-label"></label>
                    <input asp-for="Contato.Nome" class="form-control" />
                    <span asp-validation-for="Contato.Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Contato.Telefone" class="control-label"></label>
                    <input asp-for="Contato.Telefone" class="form-control" onkeypress="$(this).mask('(00) 0000-00009')"/>
                    <span asp-validation-for="Contato.Telefone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Contato.Email" class="control-label"></label>
                    <input type="email" asp-for="Contato.Email" class="form-control" />
                    <span asp-validation-for="Contato.Email" class="text-danger"></span>
                </div>
            </fieldset>


            <!-- Empresa existente -->
            <fieldset>
                <legend> Informações da Empresa</legend>

                <div class="form-group collapse show" id="existente">
                    <label asp-for="Empresa" class="control-label"></label>
                    <select asp-for="Empresa.Id" class="form-control" asp-items="@ViewData["Empresas"] as SelectList">
                        <option value="-1" selected>Selecione a empresa</option>
                    </select>
                    <span asp-validation-for="Empresa.Id" class="text-danger"></span>
                </div>

                <!-- Empresa nova -->
                <div class="collapse" id="inexistente">
                    <div class="form-group">
                        <label asp-for="Empresa.Nome" class="control-label"></label>
                        <input asp-for="Empresa.Nome" class="form-control" />
                        <span asp-validation-for="Empresa.Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Empresa.CNPJ" class="control-label"></label>
                        <input asp-for="Empresa.CNPJ" class="form-control"  onkeypress="$(this).mask('00.000.000/0000-00', {reverse: true})"/>
                        <span asp-validation-for="Empresa.CNPJ" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Empresa.Segmento" class="control-label"></label>
                        <input asp-for="Empresa.Segmento" class="form-control" />
                        <span asp-validation-for="Empresa.Segmento" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Empresa.Estado" class="control-label"></label>
                        <select asp-for="Empresa.Estado" class="form-control" asp-items="Html.GetEnumSelectList<Estado>()"></select>
                        <span asp-validation-for="Empresa.Estado" class="text-danger"></span>
                    </div>
                </div>
            </fieldset>

            <div class="form-group">
                <input type="submit" value="Incluir" class="btn btn-primary" />
            </div>


        </form>
    </div>
    </div>
<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

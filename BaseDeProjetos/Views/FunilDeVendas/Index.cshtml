@model IEnumerable<BaseDeProjetos.Models.Prospeccao>

@{
    ViewData["Title"] = "Index";
}

<div class="row card">
    <div class=" col-12 card-body">

        <h1 class="card-title">Prospecções - @ViewData["Area"]</h1>
        <div>
            <hr />
            Período avaliado:
            <a asp-action="Index" asp-route-ano="Todos">Todos</a> |
            <a asp-action="Index" asp-route-ano="2021">2021</a> |
            <a asp-action="Index" asp-route-ano="2020">2020</a> |
            <a asp-action="Index" asp-route-ano="2019">2019</a>
            <hr />
        </div>

        <div class="col-12 card-img">
            @Html.Partial("graph_funil", Model)
        </div>

        <hr />
        <p>
            <a asp-action="Create">
                <button class="btn btn-primary"> Criar Novo</button>
            </a>
        </p>

        <form asp-action="Index" method="get">
            <div class="form-actions">
                <small>
                    Achar por empresa ou líder: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                    <input type="hidden" name="ano" value="Todos" />
                    <input type="submit" value="Procurar" class="btn btn-default" /> |
                    <a asp-action="Index">Exibir Lista Completa</a>>
                </small>
            </div>
        </form>

        <table class="table card-text" style="overflow-y:scroll; max-height:150vh">
            <thead>
                <tr>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.Empresa.Nome)</a>
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.NomeProspeccao)</a>
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LinhaPequisa)
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]">@Html.DisplayNameFor(model => model.TipoContratacao)</a>
                    </th>
                    <th>
                        Líder
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status.Last().Status)
                    </th>
                    <th>
                        Ações
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Empresa.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NomeProspeccao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LinhaPequisa)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.TipoContratacao)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Usuario.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status.OrderBy(p=>p.Data).Last().Status)
                        </td>

                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                            <a asp-action="Atualizar" asp-route-id="@item.Id">Atualizar</a> |
                            <a asp-action="Delete" class="badge badge-danger" asp-route-id="@item.Id">Remover</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
	function carregarModalFunil(idProspeccao, tipo) {
		if (tipo) {
			fetch(`/FunildeVendas/RetornarModal?idProsp=${idProspeccao}&tipo=${tipo}`)
			.then(response => response.text())
			.then(result => {
				document.querySelector(`#modal${tipo}Prosp-${idProspeccao}-container`).innerHTML = result;
			});
		} else {
			console.log("Tipo de Modal Inválido");
		}
	}

	function carregarModaisFunil(idProspeccao) {
		// O nome precisa bater com o nome da view, no sentido que, o sufixo será "ProspViewComponent". Em outras palavras, está acoplado.
		modaisDisponiveis = ["Edit", "Delete", "History", "CreateFollowup"]
		modaisDisponiveis.forEach((tipo) => {
			carregarModalFunil(idProspeccao, tipo)
		})
	}

	function carregarModalEditarFollowup(idProspeccao, idFollowup, tipo) {
		console.log(`#modal${tipo}Prosp-${idProspeccao}-container`)
		if (tipo) {
			fetch(`/FunildeVendas/RetornarModalEditFollowup?idProsp=${idProspeccao}&idFollowup=${idFollowup}&tipo=${tipo}`)
				.then(response => response.text())
				.then(result => {
					document.querySelector(`#modal${tipo}Prosp-${idProspeccao}-container`).innerHTML = result;
				});
		} else {
			console.log("Algo deu errado");
		}
	}


@model IEnumerable<BaseDeProjetos.Models.Prospeccao>
@using System.Globalization
@using BaseDeProjetos.Helpers
@{
    var ptbr = new CultureInfo("pt-BR");

}
<style>
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }
</style>

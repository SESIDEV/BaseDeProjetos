@model BaseDeProjetos.Models.Prospeccao
@using BaseDeProjetos.Models
@using BaseDeProjetos.Models.Enums;
@using Microsoft.AspNetCore.Http
@using System.Globalization

@{
    ViewData["Title"] = "Edit";
    if (Context.Session.GetString("_Casa") != null)
    {
        ViewData["Area"] = Context.Session.GetString("_Casa");
    }
}

<div class="modal fade"
     id="editarProspModal-@Model.Id"
     tabindex="-1"
     aria-hidden="true">

    <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">

            <form asp-action="Edit" asp-route-id="@Model.Id" method="post">

                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Usuario.Id" />

                <!-- HEADER -->
                <div class="modal-header">
                    <h5 class="modal-title fw-semibold">Editar prospecção</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <!-- BODY -->
                <div class="modal-body">

                    <ul class="nav nav-tabs mb-3">
                        <li class="nav-item">
                            <button class="nav-link active" data-bs-toggle="tab"
                                    data-bs-target="#tab-projeto-@Model.Id" type="button">
                                Projeto
                            </button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link" data-bs-toggle="tab"
                                    data-bs-target="#tab-empresa-@Model.Id" type="button">
                                Empresa
                            </button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link"
                                    data-bs-toggle="tab"
                                    data-bs-target="#tab-equipe-@Model.Id"
                                    type="button">
                                Equipe
                            </button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link" data-bs-toggle="tab"
                                    data-bs-target="#tab-valores-@Model.Id" type="button">
                                Valores
                            </button>
                        </li>
                    </ul>

                    <div class="tab-content">

                        <!-- PROJETO -->
                        <div class="tab-pane fade show active" id="tab-projeto-@Model.Id">
                            <div class="row g-3">

                                <div class="col-md-4">
                                    <label class="form-label fw-semibold">ID</label>
                                    <input class="form-control" value="@Model.Id" disabled />
                                </div>

                                <div class="col-md-8">
                                    <label asp-for="NomeProspeccao" class="form-label fw-semibold"></label>
                                    <input asp-for="NomeProspeccao" class="form-control" />
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="Tipologia" class="form-label fw-semibold"></label>
                                    <select asp-for="Tipologia" class="form-select">
                                        <option value="">Selecione</option>
                                        <option>A</option>
                                        <option>B</option>
                                        <option>C</option>
                                        <option>D</option>
                                    </select>
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="TipoDeInteracao" class="form-label fw-semibold"></label>
                                    <select asp-for="TipoDeInteracao" class="form-select"
                                            asp-items="Html.GetEnumSelectList<TipoDeInteracao>()">
                                        <option value="">Selecione</option>
                                    </select>
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="TipoDeProjeto" class="form-label fw-semibold"></label>
                                    <select asp-for="TipoDeProjeto" class="form-select"
                                            asp-items="Html.GetEnumSelectList<TipoDeProjeto>()">
                                        <option value="">Selecione</option>
                                    </select>
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="Origem" class="form-label fw-semibold"></label>
                                    <select asp-for="Origem" class="form-select"
                                            asp-items="Html.GetEnumSelectList<Origem>()">
                                        <option value="">Selecione</option>
                                    </select>
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="TipoContratacao" class="form-label fw-semibold"></label>
                                    <select asp-for="TipoContratacao" class="form-select"
                                            asp-items="Html.GetEnumSelectList<TipoContratacao>()">
                                        <option value="">Selecione</option>
                                    </select>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="LinhaPequisa" class="form-label fw-semibold"></label>
                                    <select asp-for="LinhaPequisa" class="form-select"
                                            asp-items="Html.GetEnumSelectList<LinhaPesquisa>()">
                                        <option value="">Selecione</option>
                                    </select>
                                </div>

                            </div>
                        </div>

                        <!-- EMPRESA -->
                        <div class="tab-pane fade" id="tab-empresa-@Model.Id">
                            <div class="row g-3">

                                <div class="col-md-6">
                                    <label asp-for="EmpresaId" class="form-label fw-semibold"></label>
                                    <select asp-for="EmpresaId"
                                            class="form-select"
                                            asp-items="@(ViewData["Empresas"] as SelectList)">
                                    </select>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Contato.Nome" class="form-label fw-semibold"></label>
                                    <input asp-for="Contato.Nome" class="form-control" />
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="Contato.Cargo" class="form-label fw-semibold"></label>
                                    <input asp-for="Contato.Cargo" class="form-control" required />
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="Contato.Telefone" class="form-label fw-semibold"></label>
                                    <input asp-for="Contato.Telefone" class="form-control"
                                           onkeypress="$(this).mask('(00) 0000-00009')" required />
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="Contato.Email" class="form-label fw-semibold"></label>
                                    <input asp-for="Contato.Email" class="form-control" type="email" required />
                                </div>

                            </div>
                        </div>

                        <!-- EQUIPE -->
                        <div class="tab-pane fade" id="tab-equipe-@Model.Id">
                            <div class="row g-3">

                                <div class="mb-2">
                                    <label name="MembrosSelect" class="col-form-label" style="font-weight: 600">Membros</label>
                                    <div style="margin-left:3%;display:none" class="spinner-border" role="status" id="loadingOpcoesSelectPessoas-@Model.Id">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                    <input asp-for="MembrosEquipe" class="form-control d-none" id="inputTextPessoas-@Model.Id"
                                           type="text" />
                                    <button class="btn app-btn-primary" type="button" style="width: 100%;"
                                            id="botaoToggleCaixaRequestPessoas-@Model.Id"
                                            onclick="gerarOpcoesSelect('Pessoas','editarProspModal','-@Model.Id',true)">
                                        Alterar
                                    </button>
                                    <div class="input-group w-100" id="caixaPesquisaPessoas-@Model.Id" style="display:none;">
                                        <select id="campoSelectPessoas-@Model.Id"
                                                class="form-select w-100"
                                                multiple
                                                size="15">
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-8">
                                    <label asp-for="PotenciaisParceiros" class="form-label fw-semibold"></label>
                                    <input asp-for="PotenciaisParceiros" class="form-control" />
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="ParceiroInterno" class="form-label fw-semibold"></label>
                                    <select asp-for="ParceiroInterno"
                                            class="form-select"
                                            asp-items="Html.GetEnumSelectList<ParceiroInterno>()">
                                        <option value="">Selecione</option>
                                    </select>
                                </div>

                            </div>
                        </div>
                        <!-- VALORES -->
                        <div class="tab-pane fade" id="tab-valores-@Model.Id">
                            @if (Model.Status.Any(p => p.Status == StatusProspeccao.ComProposta || p.Status == StatusProspeccao.Convertida))
                            {
                                <div class="form-group">
                                    <label asp-for="ValorProposta" class="col-form-label" style="font-weight: 600"></label>
                                    <input name="ValorProposta"
                                           id="ValorProposta"
                                           step="0.01"
                                           class="form-control"
                                           lang="en"
                                           value="@Model.ValorProposta.ToString("0.00")" />
                                    <span asp-validation-for="ValorProposta" class="text-danger"></span>
                                </div>
                                <input name="ValorEstimado"
                                       id="ValorEstimado"
                                       step="0.01"
                                       class="form-control"
                                       lang="en"
                                       value="@Model.ValorEstimado.ToString("0.00")" />
                            }
                            else
                            {
                                <div class="mb-2">
                                    <label asp-for="ValorEstimado" class="col-form-label" style="font-weight: 600"></label>
                                    <input name="ValorEstimado"
                                           id="ValorEstimado"
                                           step="0.01"
                                           class="form-control"
                                           lang="en"
                                           value="@Model.ValorEstimado.ToString("0.00")" />
                                    <span asp-validation-for="ValorEstimado" class="text-danger"></span>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- FOOTER -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        Cancelar
                    </button>
                    <button type="submit" class="btn app-btn-primary">
                        Salvar
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
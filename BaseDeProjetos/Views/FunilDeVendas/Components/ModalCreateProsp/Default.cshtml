@model BaseDeProjetos.Models.Prospeccao
@using BaseDeProjetos.Models.Enums
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Adicionar Prospecção";

    if (Context.Session.GetString("_Casa") != null)
    {
        ViewData["Area"] = Context.Session.GetString("_Casa");
    }

    var unique_id = $"prosp_{DateTime.Now.Ticks}";
}

<script src="~/js/FunildeVendas/modalCreateProsp.js"></script>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="modal fade" id="criarProspModalToggle" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title fw-semibold">NOVA PROSPECÇÃO</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">

                    <input asp-for="Id" type="hidden" value="@unique_id" />

                    <div class="card mb-3">
                        <div class="card-header fw-semibold">PROJETO</div>
                        <div class="card-body">
                            <div class="row g-3">

                                <div class="col-md-8">
                                    <label asp-for="NomeProspeccao" class="form-label fw-semibold"></label>
                                    <input asp-for="NomeProspeccao" class="form-control"
                                           placeholder="Ex.: Proposta de biossurfactantes" />
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="Tipologia" class="form-label fw-semibold"></label>
                                    <select asp-for="Tipologia" class="form-select">
                                        <option value="">Selecione</option>
                                        <option>A</option>
                                        <option>B</option>
                                        <option>C</option>
                                        <option>D</option>
                                    </select>
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="Casa" class="form-label fw-semibold"></label>
                                    @if (Context.Session.GetString("_Casa") != null)
                                    {
                                        var enumCasa = (int)Enum.Parse(typeof(Instituto),
                                        Context.Session.GetString("_Casa"), true);

                                        <select asp-for="Casa" class="form-select">
                                            <option value="@enumCasa">@Context.Session.GetString("_Casa")</option>
                                        </select>
                                    }
                                    else
                                    {
                                        <select asp-for="Casa" class="form-select"
                                                asp-items="Html.GetEnumSelectList<Instituto>()"></select>
                                    }
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="TipoDeInteracao" class="form-label fw-semibold"></label>
                                    <select asp-for="TipoDeInteracao" class="form-select"
                                            asp-items="Html.GetEnumSelectList<TipoDeInteracao>()">
                                        <option value="">Selecione</option>
                                    </select>
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="TipoDeProjeto" class="form-label fw-semibold"></label>
                                    <select asp-for="TipoDeProjeto" class="form-select"
                                            asp-items="Html.GetEnumSelectList<TipoDeProjeto>()">
                                        <option value="">Selecione</option>
                                    </select>
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="Origem" class="form-label fw-semibold"></label>
                                    <select asp-for="Origem" class="form-select"
                                            asp-items="Html.GetEnumSelectList<Origem>()">
                                        <option value="">Selecione</option>
                                    </select>
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="TipoContratacao" class="form-label fw-semibold"></label>
                                    <select asp-for="TipoContratacao" class="form-select"
                                            asp-items="Html.GetEnumSelectList<TipoContratacao>()">
                                        <option value="">Selecione</option>
                                    </select>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="LinhaPequisa" class="form-label fw-semibold"></label>
                                    <select asp-for="LinhaPequisa" class="form-select"
                                            asp-items="Html.GetEnumSelectList<LinhaPesquisa>()">
                                        <option value="">Selecione</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card mb-3">
                        <div class="card-header fw-semibold">EMPRESA</div>
                        <div class="card-body">
                            <div class="row g-3">

                                <div class="col-md-6">
                                    <label asp-for="EmpresaId" class="form-label fw-semibold"></label>
                                    <select asp-for="EmpresaId" class="form-select"
                                            asp-items="@(ViewData["Empresas"] as SelectList)">
                                        <option value="">Selecione</option>
                                    </select>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Contato.Nome" class="form-label fw-semibold"></label>
                                    <input asp-for="Contato.Nome" class="form-control" required/>
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="Contato.Cargo" class="form-label fw-semibold"></label>
                                    <input asp-for="Contato.Cargo" class="form-control" required/>
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="Contato.Telefone" class="form-label fw-semibold"></label>
                                    <input asp-for="Contato.Telefone" class="form-control"
                                           onkeypress="$(this).mask('(00) 0000-00009')" required/>
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="Contato.Email" class="form-label fw-semibold"></label>
                                    <input asp-for="Contato.Email" class="form-control" type="email" required/>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="card mb-3">
                        <div class="card-header fw-semibold">EQUIPE</div>
                        <div class="card-body">

                            <div class="mb-3">
                                <label class="form-label fw-semibold">Membros da Equipe</label>
                                <div class="input-group">
                                    <input asp-for="MembrosEquipe" class="form-control" readonly />
                                    <button class="btn app-btn-primary" type="button"
                                            onclick="gerarOpcoesSelect('Pessoas', 'criarProspModalToggle')">
                                        Buscar
                                    </button>
                                </div>

                                <div class="collapse mt-2" id="caixaPesquisaPessoas">
                                    <select id="campoSelectPessoas" class="form-select" multiple></select>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="PotenciaisParceiros" class="form-label fw-semibold"></label>
                                <select asp-for="PotenciaisParceiros" class="form-select"
                                        asp-items="@(ViewData["Empresas"] as SelectList)">
                                    <option value="">Selecione</option>
                                </select>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="ParceiroInterno" class="form-label fw-semibold"></label>
                                <select asp-for="ParceiroInterno" class="form-select"
                                        asp-items="Html.GetEnumSelectList<ParceiroInterno>()">
                                    <option value="">Selecione</option>
                                 </select>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Tags" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <input asp-for="Tags" class="form-control" id="tagsText" />
                                    <button class="btn app-btn-primary" type="button"
                                            onclick="gerarOpcoesSelect('Tags', 'criarProspModalToggle')">
                                        Adicionar
                                    </button>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="card mb-3">
                        <div class="card-header fw-semibold">STATUS INICIAL</div>
                        <div class="card-body">
                            <div class="row g-3">

                                <div class="col-md-8">
                                    <label asp-for="Status[0].Anotacoes" class="form-label fw-semibold"></label>
                                    <textarea asp-for="Status[0].Anotacoes"
                                              class="form-control"
                                              rows="3"></textarea>
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="Status[0].Status" class="form-label fw-semibold"></label>
                                    <select asp-for="Status[0].Status" class="form-select" disabled>
                                        <option value="@StatusProspeccao.ContatoInicial">
                                            Contato Inicial
                                        </option>
                                    </select>
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label fw-semibold">Identificador</label>
                                    <input class="form-control" value="@unique_id" disabled />
                                </div>

                            </div>
                        </div>
                    </div>

                </div>

                <!-- FOOTER -->
                <div class="modal-footer">
                    <button type="button" class="btn app-btn-secondary" data-bs-dismiss="modal">
                        Cancelar
                    </button>
                    <button type="submit" class="btn app-btn-primary">
                        Concluir
                    </button>
                </div>

            </div>
        </div>
    </div>
</form>

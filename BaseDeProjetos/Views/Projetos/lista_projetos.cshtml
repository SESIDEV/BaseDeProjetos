<style>

    .caixa-projetos {
        width: 100%;
        height: 200px;
        border: solid 1px black;
        border-radio: 5px;
        display: flex;
    }

    .caixa-logo {
        max-width: 180px;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .caixa-descricao {
        display: flex;
        flex-direction: column;
        width: 100%;
    }

    .titulo-descricao, .conteudo-descricao {
        font-weight: bold;
        font-size: 13px;
        width: 20%;
        text-align: center;
    }

    .descricao, .caixa-conteudo {
        height: 50%;
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        padding: 5px;
    }

    .caixa-conteudo {
        height: 50%;
        align-items: flex-start;
    }

    #logoEmpresa {
        object-fit: contain;
        max-width: 180px;
        max-height: 180px;
        padding: 20px;
    }

    #box-btn-actions {
        width: 100%;
        display: flex;
        justify-content: center;
        gap: 10px;
    }

</style>


                                                    @(Helpers.ObterIconeParticipacao(Helpers.VerificarIntervalo(taxaConversaoProjeto, valoresMinimos["TaxaConversaoProjeto"], valoresMaximos["TaxaConversaoProjeto"])))
                                                    @((taxaConversaoProjeto * 100).ToString("N", cultura))%

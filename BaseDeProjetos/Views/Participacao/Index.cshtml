                                                    var quantidadeProspeccoesMembro = participacaoTotal.QuantidadeProspeccoesMembro;
                                                    <div data-text="(@rankQuantidadeProspeccoesMembro.ToString("N", cultura))" class="d-flex flex-row align-items-center gap-2 tooltip-indicadores">
                                                        @(Helpers.ObterIconeParticipacao(Helpers.VerificarIntervalo(quantidadeProspeccoesMembro, valoresMinimos["QuantidadeProspeccoesMembro"], valoresMaximos["QuantidadeProspeccoesMembro"])))
                                                        @quantidadeProspeccoesMembro
                                                    </div>
                                                }
                                            </td>
                                            <td class="cell">

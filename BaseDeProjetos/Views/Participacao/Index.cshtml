                                            </td>
                                            <td class="cell">
                                                @{
                                                    decimal fatorContribuicaoFinanceira = participacaoTotal.FatorContribuicaoFinanceira;
                                                    decimal fcfMaximo = valoresMaximos["FatorContribuicaoFinanceira"];
                                                    decimal fcfMinimo = valoresMinimos["FatorContribuicaoFinanceira"];
                                                    <div class="d-flex flex-row align-items-center gap-2 tooltip-indicadores">
                                                        @(Helpers.ObterIconeParticipacao(Helpers.VerificarIntervalo(fatorContribuicaoFinanceira, fcfMinimo, fcfMaximo)))
                                                        @(fatorContribuicaoFinanceira.ToString("N", cultura))

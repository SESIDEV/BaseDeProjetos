                                                                                <div class="row g-4">
                                                                                    @foreach (var participacaoUnitaria in participacoes)
                                                                                    {
                                                                                        @await Html.PartialAsync("ListaParticipacoesUnitarias", participacaoUnitaria, ViewData)
                                                                                    }
                                                                                </div>
                                                                            }
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <a class="btn btn-outline-primary" data-bs-dismiss="modal" aria-label="Close" role="button">
                                                                Fechar
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <td class="cell" style="overflow:hidden; max-width:100px">
                                                @if (ViewBag.usuarioNivel == Nivel.Dev || ViewBag.usuarioNivel == Nivel.PMO) 
                                                {
                                                    @participacaoTotal.Lider
                                                } 
                                                else {
                                                    <p>Membro @(random.Next())</p>
                                                }   
                                            </td>
                                            <td class="cell">
                                                @{
                                                    var rankValorTotalProspeccoes = participacaoTotal.RankPorIndicador["RankValorTotalProspeccoes"];
                                                    var valorTotalProspeccoes = participacaoTotal.ValorTotalProspeccoes;
                                                    <div data-text="(@rankValorTotalProspeccoes.ToString("N", cultura))" class="d-flex flex-row align-items-center gap-2 tooltip-indicadores">
                                                        @(Helpers.ObterIconeParticipacao(Helpers.VerificarIntervalo(valorTotalProspeccoes, valoresMinimos["ValorTotalProspeccoes"], valoresMaximos["ValorTotalProspeccoes"])))
                                                        R$ @valorTotalProspeccoes.ToString("N", cultura)
                                                    </div>
                                                }
                                            </td>
                                            <td class="cell">
                                                @{
                                                    var rankQuantidadeProspeccoes = participacaoTotal.RankPorIndicador["RankQuantidadeProspeccoes"];
                                                    var quantidadeProspeccoes = participacaoTotal.QuantidadeProspeccoes;
                                                    <div data-text="(@rankQuantidadeProspeccoes.ToString("N", cultura))" class="d-flex flex-row align-items-center gap-2 tooltip-indicadores">
                                                        @(Helpers.ObterIconeParticipacao(Helpers.VerificarIntervalo(quantidadeProspeccoes, valoresMinimos["QuantidadeProspeccoes"], valoresMaximos["QuantidadeProspeccoes"])))
                                                        @quantidadeProspeccoes
                                                    </div>
                                                }
                                            </td>
                                            <td class="cell">
                                                @{
                                                    var rankQuantidadeProspeccoesLider = participacaoTotal.RankPorIndicador["RankQuantidadeProspeccoesLider"];
                                                    var quantidadeProspeccoesLider = participacaoTotal.QuantidadeProspeccoesLider;
                                                    <div data-text="(@rankQuantidadeProspeccoes.ToString("N", cultura))" class="d-flex flex-row align-items-center gap-2 tooltip-indicadores">
                                                        @(Helpers.ObterIconeParticipacao(Helpers.VerificarIntervalo(quantidadeProspeccoes, valoresMinimos["QuantidadeProspeccoesLider"], valoresMaximos["QuantidadeProspeccoesLider"])))
                                                        @quantidadeProspeccoesLider
                                                    </div>
                                                }
                                            </td>
                                            <td class="cell">
                                                @{

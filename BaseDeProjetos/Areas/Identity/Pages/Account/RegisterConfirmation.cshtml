@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirmação de Cadastro";
}

<link rel="stylesheet" href="~/css/landing.css" />

<style>
    .app {
        padding-top: 0px;
    }

    #between {
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 100%;
    }

    .btn-empresa {
        background-color: #0d6efd;
        border: none;
        border-radius: 5px;
        color: white;
        text-decoration: none;
        font-size: 16px;
        padding: 5px;
        width: 80px;
    }

    .efeito-hover:hover {
        background-color: gray;
        transition: 500ms ease-in-out;
        border-radius: 10px;
        outline: none;
        border: none;
    }
</style>

<div class="row g-0 app-auth-wrapper">
    <div class="col-12 col-md-7 col-lg-6 auth-main-col text-center p-5 d-flex justify-content-center">
        <div class="d-flex flex-column align-content-end" style="margin-top:90px">
            <div class="app-auth-body mx-auto">
                <div class="app-auth-branding mb-4">
                    <p class="app-logo">
                        <img class="logo-icon me-2" style="width:90px; height:90px" src="~/favicon.png" alt="logo">
                    </p>
                </div>
                <h2 class="auth-heading text-center mb-5 fs-2 fw-bold">@ViewData["Title"]</h2>
                <div class="auth-form-container text-start">
                    @if (Model.DisplayConfirmAccountLink)
                    {
                        <p>
                            O serviço de email está em manutenção. Normalmente, você receberia um e-mail.
                        </p>
                        <p>
                            Enquanto isso: <a id="confirm-link" href="@Model.EmailConfirmationUrl">Clique aqui para confirmar sua conta</a>
                        </p>
                    }
                    else
                    {
                        <p>
                            Por favor, verifique seu e-mail para confirmar sua conta.
                        </p>
                    }
                </div><!--//auth-form-container-->
            </div><!--//auth-body-->
            <footer class="app-auth-footer text-muted">
                <div class="container">
                    <small>© @(DateTime.Now.Year) - SGI-GGI - <a href="/Home/Privacy">Privacidade</a></small>
                </div>
            </footer><!--//app-auth-footer-->
        </div><!--//flex-column-->
    </div><!--//auth-main-col-->
    <div class="col-12 col-md-5 col-lg-6 h-100 auth-background-col">
        <div class="auth-background-holder">
            <img src="~/register-photo-test.jpg" class="img-lateral-sgi" alt="background-register-photo">
        </div>
        <div class="auth-background-mask"></div>
        <div class="auth-background-overlay p-3 p-lg-5">
            <div class="d-flex flex-column align-content-end h-100">
                <div class="h-100"></div>
                <div class="overlay-content p-3 p-lg-4 rounded">
                    <h5 class="mb-3 overlay-title">SGI</h5>
                    <div>
                        Bem-vindo, o SGI é uma plataforma unificada para gestão de dados referentes às equipes dos Insitituto SENAI de Inovação em Química Verde (ISI-QV) e Inspeção e Integridade (ISI-II), assim como do Centro de Inovação SESI em Higiene Ocupacional (CIS-HO).
                    </div>
                </div>
            </div>
        </div><!--//auth-background-overlay-->
    </div><!--//auth-background-col-->
</div><!--//row-->

@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Meus dados";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p>Sua conta contém dados pessoais que você nos cedeu. Esta página permite que vocês os baixe ou os remova</p>
        <p>
            <strong>Remover esses dados vai remover sua conta permanentemente e isso não pode ser desfeito</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group">
            <button class="btn btn-primary" type="submit">Baixar dados</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-primary">Excluir</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}